generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model taxis {
  id          Int           @id @default(autoincrement())
  plate       String        @unique
  trajectories trajectories[]
}

model trajectories {
  id        Int      @id @default(autoincrement())
  taxi_id   Int
  date      DateTime
  latitude  Float
  longitude Float

  taxi      taxis    @relation(fields: [taxi_id], references: [id], onDelete: Cascade)
}